<UserControl x:Class="Gemini.Modules.Inspector.Xna.Inspectors.Vector3EditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gemini="clr-namespace:Gemini.Modules.Inspector.Controls;assembly=Gemini.Modules.Inspector"
             mc:Ignorable="d" d:DesignWidth="300">
	<gemini:LabelledControl Label="{Binding Name}">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="20" />
				<ColumnDefinition Width="1*" MinWidth="30" />
				<ColumnDefinition Width="20" />
				<ColumnDefinition Width="1*" MinWidth="30" />
				<ColumnDefinition Width="20" />
				<ColumnDefinition Width="1*" MinWidth="30" />
			</Grid.ColumnDefinitions>
			<Label Grid.Column="0" Content="X" />
			<gemini:NumericTextBox Grid.Column="1" Value="{Binding X}" VerticalAlignment="Center" />
			<Label Grid.Column="2" Content="Y" />
			<gemini:NumericTextBox Grid.Column="3" Value="{Binding Y}" VerticalAlignment="Center" />
			<Label Grid.Column="4" Content="Z" />
			<gemini:NumericTextBox Grid.Column="5" Value="{Binding Z}" VerticalAlignment="Center" />
		</Grid>
	</gemini:LabelledControl>
</UserControl>
