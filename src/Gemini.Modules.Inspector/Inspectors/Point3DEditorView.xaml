<UserControl x:Class="Gemini.Modules.Inspector.Inspectors.Point3DEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Gemini.Modules.Inspector.Controls"
             mc:Ignorable="d" d:DesignWidth="300">
	<local:LabelledControl Label="{Binding Name}">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="20" />
				<ColumnDefinition Width="1*" MinWidth="30" />
				<ColumnDefinition Width="20" />
				<ColumnDefinition Width="1*" MinWidth="30" />
				<ColumnDefinition Width="20" />
				<ColumnDefinition Width="1*" MinWidth="30" />
			</Grid.ColumnDefinitions>
			<Label Grid.Column="0" Content="X" />
			<local:NumericTextBox Grid.Column="1" Value="{Binding X}" VerticalAlignment="Bottom" />
			<Label Grid.Column="2" Content="Y" />
			<local:NumericTextBox Grid.Column="3" Value="{Binding Y}" VerticalAlignment="Bottom" />
			<Label Grid.Column="4" Content="Z" />
			<local:NumericTextBox Grid.Column="5" Value="{Binding Z}" VerticalAlignment="Bottom" />
		</Grid>
	</local:LabelledControl>
</UserControl>
